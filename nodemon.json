{
  "verbose": false,
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "server/**/*.spec.ts"
  ],
  "watch": [
    "server/**/*.ts"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts",
  "exec": "ts-node -r tsconfig-paths/register $NODE_DEBUG_OPTION --project server/tsconfig.json ./server/bin/www.ts"
}
